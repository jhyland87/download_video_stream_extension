{
  "manifest_version": 3,
  "name": "Stream Video Saver",
  "version": "1.0.0",
  "description": "Captures and saves HLS stream m3u8 files and segments",
  "permissions": [
    "webRequest",
    "storage",
    "downloads",
    "tabs",
    "activeTab",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/default-48x48.png",
      "48": "assets/icons/default-48x48.png",
      "128": "assets/icons/default-48x48.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["utils/*", "templates/*"],
      "matches": ["<all_urls>"]
    }
  ]
}

